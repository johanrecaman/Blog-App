<%= form_with model: article do |form|%>
    <div>
        <%= form.label :title%><br>
        <%= form.text_field :title%>
        <%= article.errors.full_messages_for(:title).first%>
    </div>

    <div>
        <%= form.label :body%><br>
        <%= form.text_area :body%>
        <%= article.errors.full_messages_for(:body).first%>
    </div>

    <div>
        <%= form.label :status %><br>
        <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public' %>
    </div>
    <br>

    <div>
        <%= form.submit%>
    </div>
<% end %>